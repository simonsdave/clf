{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://api.cloudfeaster.com/v1.00/spider_metadata",
  "title": "Spider Metadata",
  "description": "Spider Metadata",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "pattern": "^http.+$"
    },
    "ttl_in_seconds": {
      "type": "integer",
      "minimum": 60,
      "maximum": 86400
    },
    "max_concurrency": {
      "type": "integer",
      "minimum": 1,
      "maximum": 25
    },
    "max_crawl_time_in_seconds": {
      "type": "integer",
      "minimum": 5,
      "maximum": 300
    },
    "paranoia_level": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "identifying_factors": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9_\\-]+$": {
          "type": "object",
          "oneOf": [
            {
              "$ref": "#/definitions/pattern"
            },
            {
              "$ref": "#/definitions/enum"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "authenticating_factors": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9_\\-]+$": {
          "type": "object",
          "$ref": "#/definitions/pattern"
        }
      },
      "additionalProperties": false
    },
    "factor_display_order": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "factor_display_names": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9_\\-]+$": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z]{0,2}$": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "url"
  ],
  "additionalProperties": false,
  "definitions": {
    "pattern": {
      "type": "object",
      "properties": {
        "pattern": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "pattern"
      ],
      "additionalProperties": false
    },
    "enum": {
      "type": "object",
      "properties": {
        "enum": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      },
      "required": [
        "enum"
      ],
      "additionalProperties": false
    }
  }
}
